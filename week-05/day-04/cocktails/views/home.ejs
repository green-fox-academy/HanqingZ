<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" type="text/css" href="/static/style.css">
    <title>Cocktails</title>
  </head>
  <body>
    <h1>Cocktails</h1>
    <%- include("navigation.ejs", {alcoholList}) %>
    <table>
      <thead>
        <tr>
          <th>NAME</th>
          <th>PRICE</th>
        </tr>
      </thead>
      <tbody>
        <% cocktail.forEach(element => { %>
          <tr>
            <td class="alcholohName">
              <span>
                <p id="ALname"><%= element.name %> </p>
                <p><% if (!element.isAlcoholic) { %>
                  (non-alcoholic)
                  <% } %></p>
              </span>
              <p id="ALcontains"><%= element.contains %></p>
            </td>
            <td class="price"><%= element.price %> Ft</td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </body>
</html>